<!--index.wxml-->
<view class="containers">
	<scroll-view class="neihan-lists" scroll-y>
	    <view class="neihan-item" wx:for="{{neihan}}" wx:key="{{item.group.id}}" bindtap="showVideoDetail" data-contId="{{item.group.id}}">
			
			<view class="neihan-user">
				<view class="neihan-userinfo">
					<image class="neihan-avatar" src="{{item.group.user.avatar_url}}"></image>
					<text>{{item.group.user.name}}</text>
				</view>
				<text class="neihan-time">{{item.createAt}}</text>
			</view>

	    	<text class="neihan-title">{{item.group.text}}</text>
			<!-- 
			0.纯文字
	    	1.静图
	    	2.gif
	    	3.video
	    	4.多图 -->
	    	
    		<!-- gif/图片 -->
    		<block wx:if="{{ item.group.media_type===1 || item.group.media_type===2 }}">
    			<image mode="aspectFit" src="{{imgUrl+item.group.large_image.uri}}"></image>
    		</block>
    		<view wx:if="{{ item.group.media_type===4 }}">
    			<image class="image-item" wx:for="{{item.group.large_image_list}}" mode="aspectFit" src="{{item.url}}"></image>
    		</view>
    		<block wx:if="{{ item.group.media_type===3 }}">
    			<view class="video-container">
    				<image class="video-cover" src="{{imgUrl+item.group.large_cover.uri}}" mode="aspectFill"></image>
    				<view class="img-cover">
    					<image src="/public/img/icon-play.png"></image>
    				</view>	
    			</view>
    		</block>
			<view class="neihan-option">
				<view class="option-item">
					<image src="/public/img/icon-good.png"></image>
					{{item.group.favorite_count}}
				</view>
				<view class="option-item option-center">
					<image src="/public/img/icon-comments.png"></image>
					{{item.comments.length}}
				</view>
				<view class="option-item">
					<image src="/public/img/icon-share.png"></image>
					{{item.group.share_count}}
				</view>
			</view>
	    </view>
	</scroll-view>
</view>



