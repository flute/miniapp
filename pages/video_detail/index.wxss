/**video.wxss**/
.containers{
	height: 100vh;
}
.video-item{
	position:relative;
	display:flex;
	border-bottom:1px solid #999;
}
.video-title{
	position:absolute;
	left:20rpx;
	bottom:20rpx;
	font-size:14px;
	z-index:5;
	color:#eee;
}
.video-lists{
	height: 100%;
}
.video-cover{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, .65)
}