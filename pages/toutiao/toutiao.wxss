/**toutiao.wxss**/
.toutiao-lists{
	height: 100vh;
}
.toutiao-item{
	display: flex;
	align-items: center;
	padding:15rpx 20rpx;
	border-bottom:1px solid #efefef;
}
.toutiao-img{
	flex: 2;
	display: flex;
}
.toutiao-img image{
	width: 100%;
	height: 80px;
	margin-right: 15rpx;
}
.toutiao-info{
	flex: 5;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.toutiao-title{
	font-size: 14px;
	color: rgba(0,0,0,.85);
	font-weight: 500;
	margin-bottom: 15rpx;
}
.toutiao-desc{
	font-size: 12px;
	color: rgba(0,0,0,.55)
}
.toutiao-detail{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	background-color: #fff;
}
.toutiao-imglg{
	width: 100%;
	height: 500rpx;
}
.tt-title{
	width: 90%;
	padding: 15rpx 20rpx;
	margin-top: -40rpx;
	box-shadow: 1px 1px 5px #eee;
	background-color: #fff;
	position:absolute;
}
.tt-content{
	padding: 20rpx;
	font-size:14px;
	color:rgba(0,0,0,.65);
	line-height:40rpx;
	margin-top:60rpx;
}
.back{
	position: fixed;
	top: 15rpx;
	left: 15rpx;
}
.back image{
	width: 20px;
	height: 20px;
	background-color:rgba(255,255,255,.85);
	border-radius:3px;
	padding:2rpx 5rpx;
}
.tt-content img{
	max-width: 100% !important;
}

